<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
   xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">


    <!--*******************-->
    <!--   POC Servlet     -->
    <!--*******************-->
    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>com.prismoskills.servlets.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/hello/*</url-pattern>
    </servlet-mapping>


    <!--*******************-->
    <!-- Metrics Listeners -->
    <!--*******************-->
    <listener>
        <listener-class>com.prismoskills.metrics.MyMetricsServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.prismoskills.metrics.MyHealthCheckServletContextListener</listener-class>
    </listener>


    <!--*******************-->
    <!-- Metrics Servlet   -->
    <!--*******************-->
    <servlet>
        <servlet-name>metrics</servlet-name>
        <servlet-class>com.codahale.metrics.servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>metrics</servlet-name>
        <url-pattern>/metrics/*</url-pattern>
    </servlet-mapping>

</web-app>
